/**index.wxss**/
.image-swiper {
  width: 100%;
}
swiper {
  padding: 1% 1.5%;
  width: 97%;
}
swiper-item {
  border-radius: 10rpx;
}
swiper image {
  width: 100%;
  border-radius: 10rpx;
}

.nav {
  display: flex;
  flex-wrap: wrap;
  margin: 0 2%;
  background-color: lightgray;
  border-radius: 3px;
}
.nav-wrap {
  display: flex;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  align-items: center;
  flex-direction: column;
  width: 25%;
}
.nav-wrap text {
  font-size: 16px;
  margin-bottom: 10rpx
}
.nav-wrap image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}